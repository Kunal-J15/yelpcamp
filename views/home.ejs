<% layout('boilerplate/boilerplate') -%>
<div id="cluster-map"></div>
<h1>All camps</h1>
<a href="/camp/new">Add new</a>
<ul>
  <% for(let camp of camps){%>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%if(camp.images.length>=1){%>
          <img src="<%=camp.images[0].url%>" class="img-fluid rounded-start">
          <%}%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=camp.name%></h5>
            <p class="card-text"><%=camp.location%></p>
            <p class="card-text">Price: <%=camp.price%>$</p>
            <p class="card-text"><small class="text-muted"><%=camp.description%></small></p>
            <a href="/camp/<%=camp._id%>" class="btn btn-primary">Go to Camp</a>
          </div>
        </div>
      </div>
    </div>
  <%}%>
     </ul>
     <script type="text/javascript">
         const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
          const campgrounds={features:<%-JSON.stringify(camps)%>};
       </script>
<script src="/js/cluster.js" charset="utf-8"></script>
